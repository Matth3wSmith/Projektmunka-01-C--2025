<Window x:Class="Filmek.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filmek adatbázis"
        Height="550"
        Width="900"
        Background="#F1F4FF">

    <Window.Resources>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#00000040"
                                      BlurRadius="10"
                                      ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#4A6CF7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

    </Window.Resources>

    <Grid>
        <TabControl>

            <TabItem Header="Film hozzáadása">

                <ScrollViewer VerticalScrollBarVisibility="Auto">

                    <Border Style="{StaticResource CardStyle}" Margin="20">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0 0 25 0">

                                <Label Content="Cím"/>
                                <TextBox x:Name="Cim" Margin="0 0 0 10"/>

                                <Label Content="Műfaj"/>
                                <TextBox x:Name="Mufaj" Margin="0 0 0 10"/>

                                <Label Content="Hossz (perc)"/>
                                <TextBox x:Name="Hossz" Margin="0 0 0 10"/>

                                <Label Content="Megjelenés dátuma"/>
                                <DatePicker x:Name="Datum"
                                            Width="220"
                                            Height="34"
                                            Margin="0 0 0 10"/>

                                <Label Content="Szereplők"/>
                                <TextBox x:Name="Szereplok"
                                         AcceptsReturn="True"
                                         Height="100"
                                         VerticalScrollBarVisibility="Auto"
                                         Margin="0 0 0 10"/>

                                <Label Content="Díjak"/>
                                <TextBox x:Name="Dijak"
                                         AcceptsReturn="True"
                                         Height="100"
                                         VerticalScrollBarVisibility="Auto"
                                         Margin="0 0 0 10"/>

                            </StackPanel>

                            <StackPanel Grid.Column="1">

                                <Label Content="Rendező"/>
                                <TextBox x:Name="Rendezo" Margin="0 0 0 10"/>

                                <Label Content="Forgatókönyv író"/>
                                <TextBox x:Name="forgatoKonyv" Margin="0 0 0 10"/>

                                <Label Content="Zeneszerző"/>
                                <TextBox x:Name="Zene" Margin="0 0 0 10"/>

                                <Label Content="Gyártó"/>
                                <TextBox x:Name="Gyarto" Margin="0 0 0 10"/>

                                <Label Content="Korhatár"/>
                                <TextBox x:Name="Korhatar" Margin="0 0 0 10"/>

                                <Button Content="Film hozzáadása"
                                        Style="{StaticResource PrimaryButton}"
                                        Margin="0 20 0 0"
                                        Click="Bekuldes_Click"/>

                            </StackPanel>

                        </Grid>

                    </Border>
                </ScrollViewer>

            </TabItem>

            <TabItem Header="Módosítás / Szűrés">

                <Grid Background="#EEF1FF">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Style="{StaticResource CardStyle}" Grid.Column="0">

                        <DataGrid x:Name="FilmGrid"
                                  AutoGenerateColumns="True"
                                  AlternatingRowBackground="#F3F5F9"
                                  Margin="0" SelectionChanged="FilmGrid_SelectionChanged" Loaded="FilmGrid_Loaded" FrozenColumnCount="1" SelectedIndex="1">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#4A6CF7"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="8"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                        </DataGrid>

                    </Border>

                    <Border Style="{StaticResource CardStyle}" Grid.Column="1">

                        <StackPanel>

                            <TextBlock Text="Módosítás / törlés"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0 0 0 20"/>

                            <Label Content="Sor index:"/>
                            <TextBox x:Name="ModSor" Margin="0 0 0 10"/>

                            <Label Content="Oszlop index:"/>
                            <TextBox x:Name="ModOszlop" Margin="0 0 0 10"/>

                            <Label Content="Új érték:"/>
                            <TextBox x:Name="ModErtek" Margin="0 0 0 20"/>

                            <Button Content="Módosítás"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0 0 0 10"/>

                            <Button Content="Törlés"
                                    Style="{StaticResource PrimaryButton}"
                                    Background="#FF5A5A"/>

                        </StackPanel>

                    </Border>

                </Grid>

            </TabItem>

        </TabControl>
    </Grid>
</Window>
